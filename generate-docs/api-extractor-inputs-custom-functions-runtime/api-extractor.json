{
    "$schema": "https://dev.office.com/json-schemas/api-extractor/api-extractor.schema.json",
    "compiler" : {
      "configType": "tsconfig",
      "rootFolder": "."
    },
    "policies": {
      "namespaceSupport": "permissive"
    },
    "validationRules": {
      "missingReleaseTags": "allow"
    },
    "project": {
      "entryPointSourceFile": "custom-functions-runtime.d.ts"
    },
    "apiReviewFile": {
      "enabled": false
    },
    "apiJsonFile": {
      "enabled": true,
      "outputFolder": "../json"
    }
  }
  